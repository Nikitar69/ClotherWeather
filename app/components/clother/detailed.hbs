<Jumbo>
  <h2>{{@clother.title}}</h2>
  <p>Nice find! This looks like a nice place to stay near {{@clother.city}}.</p>
  <ShareButton
    @text="Check out {{@clother.title}} on What to wear?"
    @hashtags="training, apparel, outdooractivity"
    @via="emberjs"
  >
    Share on Twitter
  </ShareButton>
</Jumbo>

<article class="clother-item detailed">
  <Clother::Image
    src={{@clother.image}}
    alt="A picture of {{@clother.title}}"
  />

  <div class="details">
    <h3>About {{@clother.title}}</h3>

    <div class="detail owner">
      <span>Owner:</span> {{@clother.owner}}
    </div>
    <div class="detail type">
      <span>Type:</span> {{@clother.type}} â€“ {{@clother.category}}
    </div>
    <div class="detail location">
      <span>Location:</span> {{@clother.city}}
    </div>
    <div class="detail bedrooms">
      <span>Number of bedrooms:</span> {{@clother.bedrooms}}
    </div>
    <div class="detail description">
      <p>{{@clother.description}}</p>
    </div>
  </div>

  <Map
    @lat={{@clother.location.lat}}
    @lng={{@clother.location.lng}}
    @zoom="12"
    @width="894"
    @height="600"
    alt="A map of {{@clother.title}}"
    class="large"
  />
</article>